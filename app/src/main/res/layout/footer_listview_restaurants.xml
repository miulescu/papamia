<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:layout_marginLeft="2dp"
    android:paddingRight="18dp"
    android:visibility="gone"
    android:background="@color/list_row_start_color"
    android:layout_weight="1"
    android:layout_alignParentBottom="true"
    android:focusableInTouchMode="true"

    android:paddingBottom="@dimen/activity_vertical_margin">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:text="Restaurantul tau favorit nu e aici?"
        android:gravity="left"
        android:textColor="@color/restaurant_deschis"


        android:textSize="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomanda-l!"
        android:gravity="left"

        android:textSize="13dp"
        android:textColor="@color/text_shadow"
        android:paddingBottom="14dp"/>
    <EditText
        android:id="@+id/edit_restaurant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nume"
        android:inputType="textPersonName"
        android:textSize="14dp"/>
    <EditText
        android:id="@+id/edit_locatia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Locatia"
        android:inputType="textPostalAddress"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/edit_telefon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon"
        android:inputType="text|number"
        android:textSize="14dp"/>


    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/recomanda"
        android:background="@drawable/button_comanda"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="34dip"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:paddingLeft="26dp"
        android:gravity="center"
        >

        <RelativeLayout
            android:id="@+id/pasul_urmator_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            >
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Recomanda"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="-5dp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>


