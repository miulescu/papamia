<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    tools:context=".Activities.MainActivity$OrderViewFragment" >
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_order"
        >
        <TextView
            android:id="@+id/ComandaTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_alignParentLeft="true"
            android:text="Comanda Ta"
            android:textSize="16dp"
            android:padding="16dp"/>
        <TextView
            android:id="@+id/Modifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica"
            android:elevation="4dp"
            android:onClick="onClick"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:paddingTop= "16dp"
            android:paddingRight="36dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="0dp"
        android:layout_height="1dp"
        android:gravity="left"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista"
        android:background="@color/bg_order"
        >
        <ListView
            android:id="@+id/order_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_row_selector"
            android:background="@color/bg_order"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:paddingLeft="0dp"
        android:layout_height="1dp"
        android:gravity="left"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:background="@color/bg_order">
      <TextView
            android:id="@+id/textviewdatefornocallspage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Adauga Produse "
            android:textSize="16dp"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_order">
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Subtotal"
            android:textSize="12dp"
            android:paddingLeft="36dp"
            />
        <TextView
            android:id="@+id/subtotal_numeric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RON 123"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:paddingRight="36dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_order" >
        <TextView
            android:id="@+id/tva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_alignParentLeft="true"
            android:text="TVA 19%"
            android:textSize="12dp"
            android:paddingLeft="36dp"
            />
        <TextView
            android:id="@+id/tva_numeric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RON 12.2"
            android:elevation="4dp"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:paddingRight="36dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_order" >
        <TextView
            android:id="@+id/transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_alignParentLeft="true"
            android:text="Transport"
            android:textSize="12dp"
            android:paddingLeft="36dp"
            />
        <TextView
            android:id="@+id/transport_numeric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RON 12.2"
            android:elevation="4dp"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:paddingRight="36dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_order"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/total_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_alignParentLeft="true"
            android:text="Total"
            android:textSize="18dp"
            android:paddingLeft="36dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/total_general_numeric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RON 122.32"
            android:elevation="4dp"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:paddingRight="36dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="0dp"
        android:layout_height="1dp"
        android:gravity="left"
        android:background="@android:color/darker_gray"/>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/linearLayoutComanda"
        android:background="@drawable/button_comanda"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="34dip"

        android:layout_centerInParent="true"
        android:clickable="true"
        android:paddingLeft="26dp">

        <RelativeLayout
            android:id="@+id/pasul_urmator_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
          >
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Pasul Urmator"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="-5dp"


             />
            <ImageView android:layout_width="50dp"
                android:layout_height="18dp"
                android:src = "@drawable/arrows_right_icon"
                android:layout_alignParentRight="true"
                android:gravity="right"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
</ScrollView>
